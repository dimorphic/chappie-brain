# Enable top configuration file
root = true


# Global configuration
[*]
charset = utf-8
end_of_line = lf
indent_style = tab
insert_final_newline = true
tab_width = 4
trim_trailing_whitespace = true

[*.ls]
indent_style = space
insert_final_newline = true
tab_width = 2
trim_trailing_whitespace = false


# SCSS configuration
[*.scss]
insert_final_newline = false


# NPM configuration file
[package.json]
;; standard indentation
indent_style = space
indent_size = 2


# Markdown configuration
[*.md]
;; two spaces at the end of the line will produce a <br />
trim_trailing_whitespace = true

# LiveScript configuration
indent_style = space
indent_size = 2
tab_width = 2
trim_trailing_whitespace = false
